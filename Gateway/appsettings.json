{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "QueryRoute": {
        "ClusterId": "QueryCluster",
        "Match": {
          "Methods": [ "GET" ],
          "Path": "{**catch-all}"
        }
      },
      "CommandRoute": {
        "ClusterId": "CommandCluster",
        "Match": {
          "Methods": [ "POST", "PUT", "DELETE" ],
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "QueryCluster": {
        "Destinations": {
          "QueryDestination": {
            "Address": "https://localhost:7008"
          }
        }
      },
      "CommandCluster": {
        "Destinations": {
          "CommandDestination": {
            "Address": "https://localhost:7136"
          }
        }
      }
    }
  }
}
